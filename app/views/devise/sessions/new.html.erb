<div class="container">
  <h1>Log in</h1>
  <div class="col-md-offset-3 col-md-6 col-xs-12">

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, input_html: { class: "field" } %>
        <%= f.input :password, required: false, input_html: { class: "field" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn btn-success valid" %>
      </div>
    <% end %>
  </div>
</div>
